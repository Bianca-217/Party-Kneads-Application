<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:id="@+id/cartoonCardview"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="60dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:layout_marginRight="20dp"
    app:cardBackgroundColor="@color/footerpink"> <!-- CardView background color -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/hatIcon"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="start"
            android:layout_marginEnd="6dp"
            android:src="@drawable/barbie" />

        <TextView
            android:id="@+id/hatName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Barbie"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@color/semiblack" /> <!-- Text color -->

    </LinearLayout>

</androidx.cardview.widget.CardView>

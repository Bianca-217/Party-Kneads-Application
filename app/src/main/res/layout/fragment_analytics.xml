<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/whitebg"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="7dp"
    android:id="@+id/clayout"
    tools:context=".sellermenus.AnalyticsFragment">

    <!-- Back Button Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/back_bg" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:src="@drawable/back" />
    </RelativeLayout>

    <!-- Analytics Title Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="10dp"
        android:gravity="center_vertical">

        <Button
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:backgroundTint="@color/darkpink"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_weight="0"
            android:fontFamily="@font/montserrat_extrabold"
            android:text="ANALYTICS"
            android:textAlignment="center"
            android:textColor="@color/darkpink"
            android:textSize="24sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginEnd="25dp"
            android:backgroundTint="@color/darkpink"
            android:layout_weight="1" />

    </LinearLayout>

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="16dp" />

    <!-- Using RelativeLayout to position the title above the secondary chart -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/chart_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hourly Revenue - Current Day"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_alignParentTop="true" />
    </RelativeLayout>

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/secondaryBarChart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp" />
</LinearLayout>

